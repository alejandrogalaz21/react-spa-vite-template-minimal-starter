// tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "es2022",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./dist/*", ""],
      "@/core": ["./src/core/*"],
      "@/store/*": ["src/store/*"],
      "@/redux/*": ["src/redux/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/services/*": ["src/services/*"],
      "@/types/*": ["src/types/*"],
      "@/mock/*": ["src/_mock/*"],
      "@/actions/*": ["src/actions/*"],
      "@/assets/*": ["src/assets/*"],
      "@/auth/*": ["src/auth/*"],
      "@/components/*": ["src/components/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/locales/*": ["src/locales/*"],
      "@/pages/*": ["src/pages/*"],
      "@/routes/*": ["src/routes/*"],
      "@/sections/*": ["src/sections/*"],
      "@/theme/*": ["src/theme/*"],
      "@/utils/*": ["src/utils/*"],
      "@/features/*": ["src/features/*"],
      "@/shared/*": ["src/features/shared/*"]
    }
  },
  "include": ["src", "src/vite-env.d.ts", "__tests__", "jest.setup.ts", "global.d.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
